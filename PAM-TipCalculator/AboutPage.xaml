<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAM_TipCalculator.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10">
        
        <Image Source="perfil.jfif"
               WidthRequest="80"
               
               ></Image>
        
        <Label 
            Text="Projeto feito por Lucas Nascimento"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            x:Name="AboutButton"
            Text="Github"
            WidthRequest="150"
            Clicked="AboutButton_Clicked"/>
        <Button 
            x:Name="SteamButton"
            Text="Steam"
            WidthRequest="150"
            Clicked="SteamButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>